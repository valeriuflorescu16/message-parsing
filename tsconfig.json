{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "target": "es2022",
    "useDefineForClassFields": false,
    "useUnknownInCatchVariables": false
  },
  "include": ["./src/**/*"]
}
